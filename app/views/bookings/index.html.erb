<div class="container mt-3">
  <div class="row">
      <div class="col-12">
        <h1>Your bookings</h1>
        <h2>Hi <%= @current_user.name %>, here are your bookings:</h2>
      </div>
  </div>
</div>

<div class="container">
<%= link_to "See all creatures", creatures_path %>
</div>
<div class="d-flex align-items-center justify-content-between mb-3">
  <div class="booking-row">
  <br>
    <% @bookings.each do |booking| %>
      <% if booking.user_id == @current_user.id %>
        <div class="card mb-4 shadow-sm">
        <div class="co-12 col-sm-6 col-md-4 mb-3">
            <ul class="booking-list">
              <% if Creature.find(booking.creature_id).photo.key %>
              <%= cl_image_tag Creature.find(booking.creature_id).photo.key, height: 300, width: 300, crop: :fill, class: "rounded-circle" %>
              <% end %>
              <li>Name: <%= Creature.find(booking.creature_id).name %></li>
              <li>Category: <%= Creature.find(booking.creature_id).category %></li>
              <li>Breed: <%= Creature.find(booking.creature_id).breed %></li>
              <li>Owner: <%= @users.find(Creature.find(booking.creature_id).user_id).name %></li>
            </ul>
            <%= link_to "Show Creature", creature_path(Creature.find(booking.creature_id)), class: "booking-button" %>
        </div>
      </div>
      <% end %>
    <%end%>
  </div>
</div>
